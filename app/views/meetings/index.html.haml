- model_class = Meeting
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:meeting_type_id)
      %th= model_class.human_attribute_name(:met)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @meetings.each do |meeting|
      %tr
        %td= link_to meeting.id, meeting_path(meeting)
        %td= meeting.meeting_type_id
        %td= meeting.met
        %td= meeting.comment
        %td= l meeting.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_meeting_path(meeting), :class => 'btn btn-mini'     |
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            meeting_path(meeting),                                                                                       |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'                                                                          |
= link_to t('.new', :default => t("helpers.links.new")), |
  new_meeting_path,                                      |
  :class => 'btn btn-primary'                            |
