- model_class = Member
%table.table.table-striped.tablesorter#members-table
  %thead
    %tr
      %th
        Name
      %th= model_class.human_attribute_name(:belt_id)
      %th= model_class.human_attribute_name(:school_id)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:is_active)
      %th= model_class.human_attribute_name(:is_teacher)
      %th= model_class.human_attribute_name(:is_kid)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @members.each do |member|
      %tr
        %td= link_to member.full_name, member_path(member)
        %td= member.belt.name
        %td= member.school ? member.school.name : ''
        %td= member.comment
        %td= member.is_active
        %td= member.is_teacher
        %td= member.is_kid
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_member_path(member), :class => 'btn btn-default'

:javascript
  $(document).ready(function() {
    $("#members-table").tablesorter();
  });
